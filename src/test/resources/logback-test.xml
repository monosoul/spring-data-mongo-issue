<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="dev.monosoul.spring.data.mongo.issue" level="info" />
    <root level="error">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
